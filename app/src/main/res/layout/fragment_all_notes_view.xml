<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scroll_back"
    tools:context=".allNotesView">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--dummy linear layout needed for design-->
            <LinearLayout
                android:id="@+id/center_point"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" />

            <!--linear layout for the left side-->
            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/center_point"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_border"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="lorum ipsum"
                        android:textColor="#ADB4BC" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sdfsdgdfhdfdm,,nsdkjfsjkdbfskddbfskjdfbsjdfbhbsd dfmbsjhfshjf"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <!--linear layout for the right side-->
            <LinearLayout
                android:id="@+id/right_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/center_point"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp">
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_border"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="lorum ipsum"
                        android:textColor="#ADB4BC" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="250dp"
                        android:text="sdfsdgdfhdfdm,,nsdkjfsjkdbfskddbfskjdfbsjdfbhbsd dfmbsjhfshjf bdshfhsjhdfshjfsjhdfsjhfsdjfshjfgsjhfsjhfsjhgfshj"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</ScrollView>